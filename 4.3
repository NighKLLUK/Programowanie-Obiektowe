using System;

public class Program
{
    public static void Main()
    {
        Console.WriteLine("Ile chcesz wpisać liczb?");
        int rozmiar = Convert.ToInt32(Console.ReadLine());
        int[] liczby = new int[rozmiar];
        for (int i = 0; i < liczby.Length; i++)
        {
            Console.WriteLine("Podaj {0} liczbę", i + 1);
            liczby[i] = Convert.ToInt32(Console.ReadLine());
        }
        Array.Sort(liczby);
        Console.WriteLine(liczby[liczby.Length-1]);
        Console.WriteLine(liczby[0]);
        
        int suma = 0;
        for (i = 0; i < liczby.Length - 1; i++)
        {
            suma += liczby[i];
        }
        Console.WriteLine(suma/liczby.Length);

    }
}
